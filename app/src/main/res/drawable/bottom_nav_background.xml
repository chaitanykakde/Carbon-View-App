<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected (Active) Background -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <!-- Rounded Corners -->
            <corners android:radius="24dp" />

            <!-- Gradient Background -->
            <gradient
                android:angle="90"
                android:startColor="#1ABC9C"
                android:endColor="#16A085"
                android:type="linear"/>

            <!-- Solid Background (Prevent Transparency Issues) -->
            <solid android:color="#1ABC9C" />

            <!-- Elevation Effect (Shadow) -->
            <padding android:left="4dp" android:right="4dp" android:top="2dp" android:bottom="2dp"/>
        </shape>
    </item>

    <!-- Default (Inactive) Background -->
    <item>
        <shape android:shape="rectangle">
            <!-- Rounded Corners -->
            <corners android:radius="20dp" />

            <!-- Gradient Background -->
            <gradient
                android:angle="90"
                android:startColor="#ECF0F1"
                android:endColor="#BDC3C7"
                android:type="linear"/>

            <!-- Solid Background -->
            <solid android:color="#ECF0F1" />

            <!-- Padding for Better UI -->
            <padding android:left="4dp" android:right="4dp" android:top="2dp" android:bottom="2dp"/>
        </shape>
    </item>

</selector>
